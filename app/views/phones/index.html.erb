<!-- Main content -->
<section class="content">
  <!-- Small boxes (Stat box) -->
  <div class="row">
    <div class="col-xs-1">
      <div class="panel-heading">
        <%= link_to "Add New", new_phone_path, remote: true, :class => "btn btn-primary" %>
      </div>
    </div>
    <div class="col-xs-3 pull-right">
      <div class="panel-heading">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-search"></i></span>
          <input type="text" class="form-control" placeholder="Search">
        </div>
      </div>
    </div>

    <div class="col-xs-12">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>No</th>
            <% if current_user.admin %>
              <th>User ID</th>
              <th>Name</th>
            <% end %>
            <th>Phone Title</th>
            <th>Phone Number</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody class="phones-index">
          <%= render "index" %>
        </tbody>
      </table>

    </div><!-- ./col -->
  </div><!-- /.row -->
  <!-- Main row -->

  <div class="row">
    <!-- Left col -->
    <section class="col-lg-7">
    </section><!-- right col -->
  </div><!-- /.row (main row) -->

</section><!-- /.content -->

<div id="phone-modal" class="modal fade"></div>
