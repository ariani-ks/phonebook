<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
    <h3 id="modal_phone_title"></h3>
    </div>
    <%= form_for @phone, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
        <div class="form-group">
          <%= f.label :phone_title, class:"control-label" %>
          <%= f.text_field :phone_title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number, class: "control-label" %>
          <%= f.text_field :phone_number, class: "form-control" %>
          <% if @contact_id %>
            <%= f.hidden_field :contact_id, :value => @contact_id %>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
